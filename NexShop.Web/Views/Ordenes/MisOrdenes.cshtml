@model List<OrdenListViewModel>
@using NexShop.Web.ViewModels

@{
    ViewData["Title"] = "Mis Órdenes";
}

<div class="container-lg py-4">
    <!-- Encabezado -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="mb-0"><i class="bi bi-bag-check"></i> Mis Órdenes</h1>
            <p class="text-muted">Visualiza y gestiona todas tus compras</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Productos")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Continuar Comprando
            </a>
        </div>
    </div>

    <!-- Mensaje cuando no hay órdenes -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3 mb-3"><strong>No tienes órdenes aún</strong></p>
            <p class="text-muted mb-4">Cuando realices compras, aparecerán aquí</p>
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">
                <i class="bi bi-shop"></i> Ir a la Tienda
            </a>
        </div>
    }
    else
    {
        <!-- Tabla de órdenes -->
        <div class="card shadow-sm mb-4">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 15%;">Número Orden</th>
                            <th style="width: 15%;">Fecha</th>
                            <th style="width: 15%;">Total</th>
                            <th style="width: 15%;">Estado</th>
                            <th style="width: 12%;">Artículos</th>
                            <th style="width: 28%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orden in Model)
                        {
                            var estadoClass = orden.Estado == "Confirmada" ? "bg-success" :
                                              orden.Estado == "Pendiente" ? "bg-warning text-dark" :
                                              orden.Estado == "Cancelada" ? "bg-danger" : "bg-secondary";

                            <tr>
                                <td>
                                    <strong>@orden.NumeroOrden</strong>
                                </td>
                                <td>
                                    <small>@orden.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td>
                                    <strong class="text-success">$@orden.MontoTotal.ToString("F2")</strong>
                                </td>
                                <td>
                                    <span class="badge @estadoClass">
                                        @if (orden.Estado == "Confirmada")
                                        {
                                            <i class="bi bi-check-circle"></i> @orden.Estado
                                        }
                                        else if (orden.Estado == "Pendiente")
                                        {
                                            <i class="bi bi-hourglass-split"></i> @orden.Estado
                                        }
                                        else if (orden.Estado == "Cancelada")
                                        {
                                            <i class="bi bi-x-circle"></i> @orden.Estado
                                        }
                                        else
                                        {
                                            <i class="bi bi-info-circle"></i> @orden.Estado
                                        }
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        @orden.TotalArticulos @(orden.TotalArticulos == 1 ? "artículo" : "artículos")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("Detalles", "Ordenes", new { id = orden.OrdenId })" 
                                           class="btn btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i> Ver Detalles
                                        </a>
                                        @if (orden.Estado == "Pendiente")
                                        {
                                            <form method="post" asp-action="Cancelar" asp-controller="Ordenes" 
                                                  asp-route-id="@orden.OrdenId" style="display:inline;">
                                                <button type="submit" class="btn btn-warning btn-sm" 
                                                        onclick="return confirm('¿Deseas cancelar esta orden? Esta acción no puede ser deshecha.')" 
                                                        title="Cancelar orden">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Resumen de órdenes -->
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total de Órdenes</h6>
                        <h3 class="text-primary mb-0">@Model.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Gastado</h6>
                        <h3 class="text-success mb-0">$@Model.Sum(o => o.MontoTotal).ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Confirmadas</h6>
                        <h3 class="text-info mb-0">@Model.Count(o => o.Estado == "Confirmada")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Pendientes</h6>
                        <h3 class="text-warning mb-0">@Model.Count(o => o.Estado == "Pendiente")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paginación -->
        @if ((int?)ViewBag.TotalPaginas > 1)
        {
            <nav aria-label="Paginación" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if ((int?)ViewBag.PaginaActual > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Ordenes", new { pagina = 1 })" 
                               title="Primera página">
                                <i class="bi bi-chevron-double-left"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Ordenes", new { pagina = (int?)ViewBag.PaginaActual - 1 })" 
                               title="Página anterior">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= (int?)ViewBag.TotalPaginas; i++)
                    {
                        @if (i == (int?)ViewBag.PaginaActual)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else if (i == 1 || i == (int?)ViewBag.TotalPaginas || 
                                (i >= (int?)ViewBag.PaginaActual - 2 && i <= (int?)ViewBag.PaginaActual + 2))
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("MisOrdenes", "Ordenes", new { pagina = i })">@i</a>
                            </li>
                        }
                        else if (i == (int?)ViewBag.PaginaActual - 3 || i == (int?)ViewBag.PaginaActual + 3)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    @if ((int?)ViewBag.PaginaActual < (int?)ViewBag.TotalPaginas)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Ordenes", new { pagina = (int?)ViewBag.PaginaActual + 1 })" 
                               title="Página siguiente">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Ordenes", new { pagina = (int?)ViewBag.TotalPaginas })" 
                               title="Última página">
                                <i class="bi bi-chevron-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
