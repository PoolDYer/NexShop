@model ConfirmacionOrdenViewModel
@using NexShop.Web.ViewModels

@{
    ViewData["Title"] = "Confirmación de Orden";
}

<div class="container-lg py-5">
    <div class="text-center mb-5">
        <div class="success-animation mb-4">
            <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        <h2 class="text-success mb-2">¡Compra Realizada Exitosamente!</h2>
        <p class="text-muted lead">Tu orden ha sido procesada correctamente</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Información Principal -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i> Detalles de tu Orden
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Número de Orden -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block">Número de Orden</small>
                                <h4 class="text-success mb-0">@Model.NumeroOrden</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center p-3 bg-light rounded">
                                <small class="text-muted d-block">Fecha y Hora</small>
                                <h6 class="mb-0">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</h6>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Entrega -->
                    <div class="mb-4">
                        <h6 class="text-uppercase text-muted mb-2">
                            <i class="bi bi-truck"></i> Dirección de Entrega
                        </h6>
                        <div class="border-start border-success ps-3">
                            <p class="mb-0">@Model.DireccionEntrega</p>
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="bg-light p-3 rounded mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Monto Total Pagado:</h6>
                            <h4 class="text-success mb-0">$@Model.MontoTotal.ToString("F2")</h4>
                        </div>
                    </div>

                    <!-- Mensaje -->
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>@Model.Mensaje</strong>
                    </div>
                </div>
            </div>

            <!-- Productos de la Orden -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-bag"></i> Productos Comprados
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Precio Unitario</th>
                                <th class="text-center">Cantidad Comprada</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-box"></i> @detalle.ProductoNombre
                                    </td>
                                    <td class="text-end">
                                        $@detalle.PrecioUnitario.ToString("F2")
                                    </td>
                                    <td class="text-center">
                                        <strong>@detalle.Cantidad unidades</strong>
                                    </td>
                                    <td class="text-end">
                                        <strong>$@detalle.Subtotal.ToString("F2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Próximos Pasos -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> Próximos Pasos
                    </h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li class="mb-2">
                            <strong>Confirmación:</strong> Recibirás un correo de confirmación en los próximos minutos.
                        </li>
                        <li class="mb-2">
                            <strong>Preparación:</strong> Comenzaremos a preparar tu orden para el envío.
                        </li>
                        <li class="mb-2">
                            <strong>Notificación de Envío:</strong> Te notificaremos cuando tu paquete esté en camino.
                        </li>
                        <li>
                            <strong>Entrega:</strong> Puedes seguir el estado de tu envío en cualquier momento.
                        </li>
                    </ol>
                </div>
            </div>

            <!-- Botones de Acción -->
            <div class="d-grid gap-2 mb-3">
                <a asp-action="MisOrdenes" asp-controller="Ordenes" class="btn btn-primary btn-lg">
                    <i class="bi bi-list-check"></i> Ver Mis Órdenes
                </a>
                <a asp-action="Index" asp-controller="Productos" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-shop"></i> Continuar Comprando
                </a>
            </div>

            <!-- Información de Soporte -->
            <div class="alert alert-light text-center">
                <i class="bi bi-question-circle"></i>
                ¿Necesitas ayuda?
                <a href="#" class="alert-link">Contáctanos</a>
            </div>
        </div>
    </div>
</div>

<style>
    .success-animation {
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
</style>
