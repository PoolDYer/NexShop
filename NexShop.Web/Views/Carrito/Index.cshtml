@model CarritoViewModel
@using NexShop.Web.ViewModels

@{
    ViewData["Title"] = "Carrito de Compras";
    var subtotal = Model.Articulos.Sum(a => a.Precio * a.Cantidad);
    var impuesto = subtotal * 0.16m;
    var total = subtotal + impuesto;
}

<div class="container-lg py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cart-fill"></i> Carrito de Compras</h2>
        <a asp-area="" asp-controller="Productos" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Continuar Comprando
        </a>
    </div>

    @if (!Model.Articulos.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
            <p class="mt-3">Tu carrito esta vacio</p>
            <a asp-area="" asp-controller="Productos" asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-shop"></i> Ver Productos
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Subtotal</th>
                                    <th class="text-center">Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var articulo in Model.Articulos)
                                {
                                    var subtotalArticulo = articulo.Precio * articulo.Cantidad;
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(articulo.ImagenUrl))
                                                {
                                                    <img src="@articulo.ImagenUrl" alt="@articulo.ProductoNombre" 
                                                         class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" 
                                                         style="width: 60px; height: 60px;">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <strong>@articulo.ProductoNombre</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <strong>$@articulo.Precio.ToString("F2")</strong>
                                        </td>
                                        <td class="text-center">
                                            <form method="post" asp-action="ActualizarCantidad" class="d-inline">
                                                <div class="input-group input-group-sm">
                                                    <input type="hidden" name="productoId" value="@articulo.ProductoId">
                                                    <input type="number" name="cantidad" value="@articulo.Cantidad" 
                                                           min="1" max="@articulo.StockDisponible" class="form-control form-control-sm text-center"
                                                           title="Máximo: @articulo.StockDisponible unidades disponibles">
                                                    <button type="submit" class="btn btn-outline-secondary btn-sm" title="Actualizar cantidad">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </div>
                                                @if (articulo.Cantidad >= articulo.StockDisponible)
                                                {
                                                    <small class="text-danger d-block">?? Límite de stock alcanzado</small>
                                                }
                                            </form>
                                        </td>
                                        <td class="text-end">
                                            <strong>$@subtotalArticulo.ToString("F2")</strong>
                                        </td>
                                        <td class="text-center">
                                            <form method="post" asp-action="Eliminar" style="display:inline;">
                                                <input type="hidden" name="productoId" value="@articulo.ProductoId">
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Deseas eliminar este producto?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Resumen de Compra</h5>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>$@subtotal.ToString("F2")</strong>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Impuesto (16%):</span>
                            <strong>$@impuesto.ToString("F2")</strong>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-3">
                            <h6>Total:</h6>
                            <h6 class="text-success">$@total.ToString("F2")</h6>
                        </div>

                        <form method="post" asp-controller="Ordenes" asp-action="Checkout" class="mb-2">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-credit-card"></i> Proceder al Pago
                            </button>
                        </form>

                        <form method="post" asp-action="Vaciar">
                            <button type="submit" class="btn btn-outline-danger w-100" 
                                    onclick="return confirm('Deseas vaciar el carrito?')">
                                <i class="bi bi-trash"></i> Vaciar Carrito
                            </button>
                        </form>

                        <hr class="my-3">

                        <div class="alert alert-info small" role="alert">
                            <i class="bi bi-info-circle"></i> 
                            Envio gratis para compras mayores a $100
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
