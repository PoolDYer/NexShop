@model List<NexShop.Web.Models.Orden>

@{
    ViewData["Title"] = "Mis Ordenes";
}

<div class="container py-4">
    <!-- Encabezado -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="mb-0"><i class="bi bi-bag-check"></i> Mis Ordenes</h1>
            <p class="text-muted">Visualiza y gestiona todas tus compras</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Dashboard", "Usuarios")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Mensaje cuando no hay órdenes -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-3 mb-3"><strong>No tienes órdenes aún</strong></p>
            <p class="text-muted mb-4">Cuando realices compras, aparecerán aquí</p>
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">
                <i class="bi bi-shop"></i> Ir a la Tienda
            </a>
        </div>
    }
    else
    {
        <!-- Tabla de órdenes -->
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 12%;">ID Orden</th>
                            <th style="width: 20%;">Fecha</th>
                            <th style="width: 15%;">Total</th>
                            <th style="width: 15%;">Estado</th>
                            <th style="width: 15%;">Artículos</th>
                            <th style="width: 23%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orden in Model)
                        {
                            var estadoClass = orden.Estado == "Completada" ? "bg-success" :
                                              orden.Estado == "Pendiente" ? "bg-warning text-dark" :
                                              orden.Estado == "Cancelada" ? "bg-danger" : "bg-secondary";

                            <tr>
                                <td>
                                    <strong>#@orden.OrdenId</strong>
                                </td>
                                <td>
                                    <small>@orden.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td>
                                    <strong>$@orden.MontoTotal.ToString("F2")</strong>
                                </td>
                                <td>
                                    <span class="badge @estadoClass">@orden.Estado</span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@orden.Detalles.Count @(orden.Detalles.Count == 1 ? "artículo" : "artículos")</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="@Url.Action("DetallesOrden", "Usuarios", new { id = orden.OrdenId })" class="btn btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        @if (orden.Estado == "Pendiente")
                                        {
                                            <button type="button" class="btn btn-warning" title="Cancelar orden" onclick="cancelarOrden(@orden.OrdenId)">
                                                <i class="bi bi-x-circle"></i> Cancelar
                                            </button>
                                        }
                                        <button type="button" class="btn btn-secondary" title="Descargar recibo" onclick="descargarRecibo(@orden.OrdenId)">
                                            <i class="bi bi-download"></i> Recibo
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Resumen de órdenes -->
        <div class="row mt-4">
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Total de Órdenes</h6>
                        <h3 class="text-primary">@Model.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Total Gastado</h6>
                        <h3 class="text-success">$@Model.Sum(o => o.MontoTotal).ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Completadas</h6>
                        <h3 class="text-info">@Model.Count(o => o.Estado == "Completada")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">Pendientes</h6>
                        <h3 class="text-warning">@Model.Count(o => o.Estado == "Pendiente")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Paginación -->
        @if ((int)ViewBag.TotalPaginas > 1)
        {
            <nav aria-label="Paginacion" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if ((int)ViewBag.PaginaActual > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Usuarios", new { pagina = 1 })" title="Primera página">
                                <i class="bi bi-chevron-double-left"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Usuarios", new { pagina = (int)ViewBag.PaginaActual - 1 })" title="Página anterior">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
                    {
                        @if (i == (int)ViewBag.PaginaActual)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else if (i == 1 || i == (int)ViewBag.TotalPaginas || 
                                (i >= (int)ViewBag.PaginaActual - 2 && i <= (int)ViewBag.PaginaActual + 2))
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("MisOrdenes", "Usuarios", new { pagina = i })">@i</a>
                            </li>
                        }
                        else if (i == (int)ViewBag.PaginaActual - 3 || i == (int)ViewBag.PaginaActual + 3)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    @if ((int)ViewBag.PaginaActual < (int)ViewBag.TotalPaginas)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Usuarios", new { pagina = (int)ViewBag.PaginaActual + 1 })" title="Página siguiente">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("MisOrdenes", "Usuarios", new { pagina = (int)ViewBag.TotalPaginas })" title="Última página">
                                <i class="bi bi-chevron-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

