@model NexShop.Web.Controllers.EditarPerfilViewModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-person-circle"></i> Mi Perfil</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre Completo</label>
                                <p class="form-control-plaintext">@Model.NombreCompleto</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Telefono</label>
                                <p class="form-control-plaintext">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "No especificado" : Model.PhoneNumber)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tipo de Usuario</label>
                                <p class="form-control-plaintext">
                                    @if (Model.TipoUsuario == "Vendedor")
                                    {
                                        <span class="badge bg-success">Vendedor</span>
                                    }
                                    else if (Model.TipoUsuario == "Comprador")
                                    {
                                        <span class="badge bg-info">Comprador</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@Model.TipoUsuario</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Direccion</label>
                            <p class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Direccion) ? "No especificada" : Model.Direccion)</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Descripcion</label>
                            <p class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Descripcion) ? "No especificada" : Model.Descripcion)</p>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Editar", "Usuarios")" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Editar Perfil
                        </a>
                        <a href="@Url.Action("CambiarContrasena", "Usuarios")" class="btn btn-warning">
                            <i class="bi bi-key"></i> Cambiar Contrasena
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
