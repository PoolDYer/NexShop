@model CategoriaListViewModel
@using NexShop.Web.ViewModels

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container-lg py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Eliminar Categoría</h4>
                </div>
                <div class="card-body p-4">
                    <!-- Advertencia -->
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>¡Advertencia!</strong> Esta acción no se puede deshacer.
                    </div>

                    <!-- Información -->
                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <h6 class="card-title">Categoría a eliminar:</h6>
                            <p class="mb-2">
                                <strong>Nombre:</strong> @Model.Nombre
                            </p>
                            <p class="mb-0">
                                <strong>Descripción:</strong> @Model.Descripcion
                            </p>
                        </div>
                    </div>

                    <!-- Número de Productos -->
                    @if (ViewBag.TotalProductos > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i>
                            <strong>Atención:</strong> Esta categoría tiene @ViewBag.TotalProductos producto(s). 
                            No se puede eliminar hasta que todos los productos sean reasignados o eliminados.
                        </div>
                    }
                    else
                    {
                        <!-- Formulario -->
                        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.CategoriaId">
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="confirm" required>
                                <label class="form-check-label" for="confirm">
                                    Confirmo que deseo <strong>eliminar</strong> esta categoría
                                </label>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn" disabled>
                                    <i class="bi bi-trash"></i> Eliminar Categoría
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    }

                    @if (ViewBag.TotalProductos > 0)
                    {
                        <div class="mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirm').addEventListener('change', function() {
            document.getElementById('deleteBtn').disabled = !this.checked;
        });
    </script>
}
