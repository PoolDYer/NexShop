@model List<CategoriaListViewModel>
@using NexShop.Web.ViewModels

@{
    ViewData["Title"] = "Gestión de Categorías";
}

<div class="container-lg py-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list"></i> Gestión de Categorías</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla de Categorías -->
    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;">#</th>
                            <th style="width: 25%;"><i class="bi bi-tag"></i> Nombre</th>
                            <th style="width: 40%;"><i class="bi bi-file-text"></i> Descripción</th>
                            <th style="width: 15%;"><i class="bi bi-status"></i> Estado</th>
                            <th style="width: 15%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var categoria in Model)
                        {
                            <tr>
                                <td>@categoria.CategoriaId</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(categoria.IconoUrl))
                                    {
                                        <i class="@categoria.IconoUrl"></i>
                                    }
                                    <strong>@categoria.Nombre</strong>
                                </td>
                                <td>@categoria.Descripcion</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input toggle-activa" type="checkbox" 
                                               @(categoria.EstaActiva ? "checked" : "") 
                                               data-categoria-id="@categoria.CategoriaId">
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@categoria.CategoriaId" 
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@categoria.CategoriaId" 
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 2rem;"></i>
            <p class="mt-3">No hay categorías. <a asp-action="Create" class="alert-link">Crea una</a></p>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.toggle-activa').forEach(toggle => {
            toggle.addEventListener('change', async function() {
                const categoriaId = this.dataset.categoriaId;
                try {
                    const response = await fetch(`/Categorias/ToggleActiva/${categoriaId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    const result = await response.json();
                    if (!result.success) {
                        alert('Error al cambiar estado');
                        this.checked = !this.checked;
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al cambiar estado');
                    this.checked = !this.checked;
                }
            });
        });
    </script>
}
