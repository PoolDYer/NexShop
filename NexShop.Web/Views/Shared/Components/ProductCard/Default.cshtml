@* Componente para tarjeta de producto *@
@model ProductoListViewModel

<div class="col">
    <div class="card h-100 shadow-sm product-card border-0">
        <!-- Imagen del Producto -->
        <div class="position-relative product-image-container" 
             style="aspect-ratio: 1; overflow: hidden; background-color: #f5f5f5;">
            @if (!string.IsNullOrEmpty(Model.ImagenPrincipal))
            {
                <img src="@Model.ImagenPrincipal" 
                     alt="@Model.Nombre" 
                     class="card-img-top w-100 h-100 object-fit-cover"
                     style="object-fit: cover;">
            }
            else
            {
                <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                </div>
            }

            <!-- Badge Estado -->
            <div class="position-absolute top-0 end-0 m-2">
                @if (Model.Estado == "Disponible")
                {
                    <span class="badge bg-success">
                        <i class="bi bi-check-circle"></i> Disponible
                    </span>
                }
                else if (Model.Estado == "Agotado")
                {
                    <span class="badge bg-danger">
                        <i class="bi bi-x-circle"></i> Agotado
                    </span>
                }
            </div>

            <!-- Envío Gratis -->
            @if (Model.Stock > 10)
            {
                <div class="position-absolute bottom-0 start-0 m-2">
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-truck"></i> Envío Gratis
                    </span>
                </div>
            }
        </div>

        <!-- Contenido del Card -->
        <div class="card-body d-flex flex-column">
            <!-- Nombre -->
            <h6 class="card-title text-truncate" title="@Model.Nombre">
                <a asp-action="Details" asp-controller="Productos" 
                   asp-route-id="@Model.ProductoId" 
                   class="text-decoration-none text-dark">
                    @Model.Nombre
                </a>
            </h6>

            <!-- Categoría -->
            <p class="text-muted small mb-2">
                <i class="bi bi-tag"></i> @Model.CategoriaNombre
            </p>

            <!-- Calificación -->
            @if (Model.NumeroResenas > 0)
            {
                <div class="mb-2">
                    <small class="text-warning">
                        @for (int i = 0; i < (int)(Model.CalificacionPromedio ?? 0); i++)
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        @for (int i = (int)(Model.CalificacionPromedio ?? 0); i < 5; i++)
                        {
                            <i class="bi bi-star"></i>
                        }
                        (@Model.NumeroResenas)
                    </small>
                </div>
            }

            <!-- Espaciador -->
            <div class="flex-grow-1"></div>

            <!-- Precio -->
            <div class="mb-3 border-top pt-2">
                <h5 class="text-primary mb-0">
                    @Model.Precio.ToString("C")
                </h5>
                <small class="text-muted">
                    Stock: @Model.Stock
                </small>
            </div>

            <!-- Botón Ver -->
            <a asp-action="Details" asp-controller="Productos" 
               asp-route-id="@Model.ProductoId" 
               class="btn btn-sm btn-primary w-100">
                <i class="bi bi-eye"></i> Ver Detalle
            </a>
        </div>
    </div>
</div>
