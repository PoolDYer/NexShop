@using Microsoft.AspNetCore.Identity
@using NexShop.Web.Models

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form id="logoutForm" class="form-inline" asp-page="/Account/Logout" method="post">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">
            <i class="bi bi-box-arrow-right"></i> Logout
        </button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Register">
                <i class="bi bi-person-plus"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
        </li>
    </ul>
}
