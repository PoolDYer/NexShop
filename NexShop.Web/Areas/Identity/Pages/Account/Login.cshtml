@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-box-arrow-in-right" style="font-size: 3rem; color: #2b7de9;"></i>
                        <h2 class="mt-3">Iniciar Sesion</h2>
                        <p class="text-muted">Bienvenido a NexShop</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display:none;">
                            <span></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-bold">Correo Electronico</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" 
                                   placeholder="ejemplo@nexshop.com" autofocus>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-bold">Contrasena</label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" 
                                   placeholder="Tu contrasena">
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input">
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Recuerdame en este dispositivo
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesion
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                No tienes cuenta? 
                                <a asp-page="./Register" class="text-decoration-none">Registrate aqui</a>
                            </p>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="alert alert-info small">
                        <strong>Credenciales de prueba:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Admin:</strong> admin@nexshop.com / Admin@123456</li>
                            <li><strong>Vendedor:</strong> vendedor@nexshop.com / Vendedor@123456</li>
                            <li><strong>Comprador:</strong> comprador@nexshop.com / Comprador@123456</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
